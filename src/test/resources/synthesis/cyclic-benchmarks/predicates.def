predicate rose_tree(loc x, set s) {
|  x == 0        => { self_card == 0 /\ s =i {} ; emp }
|  not (x == 0)  => { z < self_card; [x, 1] ** x :-> b ** buds(b, s)<z>}
}

predicate buds(loc x, set s) {
|  x == 0        => { self_card == 0 /\ s =i {}; emp }
|  not (x == 0)  => { y < self_card /\ z < self_card /\ s =i {v} ++ s1 ++ s2 ;
                      [x, 3] ** x :-> v ** (x + 1) :-> r ** rose_tree(r, s1)<y> ** (x + 2) :-> nxt ** buds(nxt, s2)<z> }
}


predicate sll(loc x, set s) {
|  x == 0        => { s == {} ; emp }
|  not (x == 0)  => { s == {v} ++ s1 ; [x, 2] ** x :-> v ** (x + 1) :-> nxt ** sll(nxt, s1) }
}