predicate lseg(x, y, len) {
|  x == y        => { len == 0 ; emp }
|  not (x == y)  => { (len == 1 + len1) /\ (0 <= len1) ; [x, 2] ** x :-> v ** (x + 1) :-> nxt ** lseg(nxt, y, len1) }
}

predicate treeN(x, n) {
|  x == 0        => {n == 0 ; emp}
|  not (x == 0)  => {(n == 1 + nn) /\ ((nn == n1 + n2) /\ ((0 <= n1) /\ (0 <= n2))) ;
                     [x, 3] ** x :-> v ** (x + 1) :-> l ** (x + 2) :-> r ** treeN(l, n1) ** treeN(r, n2)}
}