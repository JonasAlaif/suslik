void srtl_prepend (loc x, int k, loc r)
{n1 == n + 1  /\ hi1 == (hi <= k ? k : hi) ; r :-> y ** srtl(y, n1, k, hi1) }

#####

void srtl_prepend (loc x, int k, loc r) {
  if (x == 0) {
    let y2 = malloc(2);
    *y2 = k;
    *(y2 + 1) = 0;
    *r = y2;
  } else {
    let y2 = malloc(2);
    *y2 = k;
    *(y2 + 1) = x;
    *r = y2;
  }
}