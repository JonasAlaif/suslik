void bst_right_rotate (loc x, loc ret)
{ sz3 + sz4 == sz1 + sz2 && v3 <= lower s4 && (v3 == upper ([v3] + s3)) ;
  ret :-> y ** [y, 3]@b ** y :->@a v3 ** (y + 1) :-> l3 ** (y + 2) :-> x
  ** bst(l3, s3, sz3, a, mut, b) ** bst(x, s4, sz4, a, mut, b) }

#####

void bst_right_rotate (loc x, loc ret) {
  let l = *(x + 1);
  let r = *(l + 2);
  *(l + 2) = x;
  *(x + 1) = r;
  *ret = l;
}